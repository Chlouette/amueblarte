<h1>Bookings#new</h1>
<p>Find me in app/views/bookings/new.html.erb</p>

<h1>This is the form to donate / create / decorate a new piece of furniture</h1>

<% if session[:booking_type] == "decoration" %>
<%= simple_form_for(@item) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :photo, as: :file, input_html: { multiple: true } %>
  <%= f.submit %>
<% end %>

