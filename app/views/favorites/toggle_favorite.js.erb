var itemId = '<%= @favorite_item.id%>'

function toggleItemLikeButton(itemId, favoritedItem) {
  let likeButton = document.querySelector(`.card-text-like[data-id='${itemId}']`)
  likeButton.classList.toggle('pink-heart');
  if (likeButton.classList.contains('pink-heart')) {
    const favoriteList = document.querySelector('.favorites');
    favoriteList.insertAdjacentHTML('beforeend', favoritedItem)
  }
  else {
    document.querySelector(`.favorite[data-id='${itemId}']`).remove()
  }
}

toggleItemLikeButton(itemId, '<%= j render "favorite_items/favorite_item", favorite_item: @favorite_item %>');
