
<div class="home-container">

  <br>
  <br>

  <div class="home-links-container">
    <%= link_to new_item_path, class: "home-card-link" do %>
      <div class="home-card abandoned-chair">
        DONATE
      </div>
    <% end %>

    <%= link_to items_create_path, class: "home-card-link" do %>
      <div class="home-card art-chair">
        CREATE
      </div>
    <% end %>

    <%= link_to items_decorate_path, class: "home-card-link" do %>
      <div class="home-card decorate-chair">
        DECORATE
      </div>
    <% end %>
  </div>

  <br>
  <br>

  <div class="text-center mt-3">

    <% items = @items.sample(3) %>
    <% item_1 = items[0] %>
    <% item_2 = items[1] %>
    <% item_3 = items[2] %>
    <% artist = @artists.sample %>

    <h1>RECENTS</h1>
    <p>for your amooblment</p>
  </div>

  <br>
  <br>

  <div class="row justify-content-center">
    <div class="col-4 home-card-link-wrapper">
      <%= link_to @links[2], target: "_blank" do  %>
        <div class="home-grid-card mb-4">
          <h2>NEWS</h2>
          <p><%= @articles[4][0..89]%>...</p>
          <%= image_tag @images[2], alt: "alttext", class: "grid-card-image" %>
        </div>
      <% end %>
    </div>

    <div class="col-4 home-card-link-wrapper">
      <%= link_to artist_path(artist) do %>
        <div class="home-grid-card blue-underline mb-4">
          <div class="text-center">
            <br>
            <h2>FEATURED ARTIST</h2>
            <br>
            <h2 class="home-artist-name">January Fisher</h2>
            <br>
            <img src="https://images.unsplash.com/photo-1545167622-3a6ac756afa4?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1yZWxhdGVkfDZ8fHxlbnwwfHx8fA%3D%3D&auto=format&fit=crop&w=500&q=60" class="home-profile-avatar">
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-4 home-card-link-wrapper">
      <%= link_to item_path(item_1) do  %>
        <div class="home-items-decorate-card">
          <h2>FOR SALE</h2>
          <%= cl_image_tag item_1.photos.first.key %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-4 home-card-link-wrapper">
      <%= link_to item_path(item_2) do  %>
        <div class="home-items-decorate-card">
          <h2>FOR SALE</h2>
          <img src="https://ksassets.timeincuk.net/wp/uploads/sites/56/2021/04/Annie-Sloan-Countryside-Bird-stencil-320x320.jpg">
        </div>
      <% end %>
    </div>

    <div class="col-4 home-card-link-wrapper">
      <%= link_to item_path(item_3) do  %>
        <div class="home-items-decorate-card">
          <h2>FOR SALE</h2>
          <%= cl_image_tag item_3.photos.first.key %>
        </div>
      <% end %>
    </div>

    <div class="col-4 home-card-link-wrapper">
      <%= link_to @links[4], target: "_blank" do  %>
        <div class="home-grid-card">
          <h2>NEWS</h2>
          <p><%= @articles[6][0..89]%>...</p>
          <%= image_tag @images[4], alt: "alttext", class: "grid-card-image" %>
        </div>
      <% end %>
    </div>
  </div>

<br>
<br>

</div>
