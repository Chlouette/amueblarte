<div class="mt-5 container justify-content-between">
  <h1> <%= @item.name %> </h1>
  <div class="mt-5 d-flex">
    <div class="flex-grow-1">
      <%= cl_image_tag(@item.photos.first.key) %>
    </div>
    <div class="show-description">
      <p>DESCRIPTION: <%= @item.description %> </p>
    </div>
  </div>

  <% if @basket.items.include?(@item) %>
    <%= link_to 'Already in your Basket', class: "disabled" %>
  <% else %>
    <%= link_to 'Add to Basket', item_basket_items_path(@item), method: :post %>
  <% end %>
  <div>
    <%# <%= render 'meetartist' %>
    </div>
  </div>
  </div>
</div>
