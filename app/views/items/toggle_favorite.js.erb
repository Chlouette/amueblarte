var itemId = '<%= @item.id%>'

function toggleLikeButton(itemId, innerHTML) {
  if (document.querySelector(`.card-text-like[data-id='${itemId}']`)) {
    document.querySelector(`.card-text-like[data-id='${itemId}']`).classList.toggle('pink-heart');
  } else if (document.querySelector(`.show-like[data-id='${itemId}']`)) {
    document.querySelector(`.show-like[data-id='${itemId}']`).classList.toggle('pink-heart');
  }
}

toggleLikeButton(itemId);

