  <div class="container page-container">
  <div class="m-5 text-center">
    <h1>Collection time!</h1>
    <p>When is the best time for us to come and collect your item?</p>
  </div>
</div>
  
  <div class="container page-container">
    <h2 class="mb-5">Amazing, you're saving this beauty from the waste:</h2>
    <div class="cards">
      <div class="card-category">
        <ul>
          <li>Name: <%= @item.name %></li>
          <li>Description: <%= @item.description %></li>
        </ul>
      </div>
      <% image1 = "https://images.unsplash.com/photo-1564085352725-08da0272627d?ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8Y293fGVufDB8fDB8fA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=60" %>
      <% if @item.photos.attached? %>
        <% image1 = cl_image_path @item.photos.first.key %>
      <% end %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image1 %>)">
      </div>

      <% image2 = "https://images.unsplash.com/photo-1564085352725-08da0272627d?ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8Y293fGVufDB8fDB8fA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=60" %>
      <% if @item.photos.attached? %>
        <% image2 = cl_image_path @item.photos.second.key %>
      <% end %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image2 %>)">
      </div>
    </div>

    <h2 class="my-5">Book your collection date:</h2>
      <div>
          <%= simple_form_for([@item, @booking]) do |f| %>
            <%= f.input :start_date, as: :string, required: true, label: false, input_html: {class: "datepicker"}, placeholder: 'Select date' %>
            <%= f.submit "Next" %>
            <%# <button type="button" class="fill">More Items</button> %>
          <% end %>
      </div>
  </div>
