<div class="container page-container">
  <div class="m-5 text-center">
    <h1>Collection time!</h1>
    <p>When is the best time for us to come and collect your item?</p>
  </div>
</div>
  
<div class="container page-container">
  <div class="cards d-flex justify-content-between align-items-center">
    <%# <div class="card-category"> %>
    <%# <div> %>
      <ul>
        <li><h4>Amazing, you're saving this beauty from the waste:</h4></li>
        <br>
        <li>Name: <%= @item.name %></li>
        <li>Description: <%= @item.description %></li>
      </ul>
    <%# </div> %>
    <%# </div> %>
    <%# <div class="d-flex"> %>
      <% if @item.photos.attached? %>
        <% @item.photos.each do |photo| %>
          <div class="d-flex" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path photo.key %>')">
          </div>
        <% end %>
      <% else %>
        <div class="d-flex" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1564085352725-08da0272627d?ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8Y293fGVufDB8fDB8fA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=60')">
        </div>
      <% end %>
    <%# </div> %>
  </div>

  <br>
  <div class="booking-form">
        <%= simple_form_for([@item, @booking], html: { class: "form-inline" }) do |f| %>
          <div class="d-flex w-100 justify-content-between">
            <h4 style="margin-top: 0.7rem">Book your collection date:</h4>
            <div class="d-flex">
              <%= f.input :start_date, as: :string, required: true, label: false, input_html: {class: "datepicker", "data-multiple": false}, placeholder: 'Select date' %>
              <%= f.submit "Next", class: "form-button ml-5" %>
              <%# <button type="button" class="fill">More Items</button> %>
            </div>
          </div>
        <% end %>
    </div>
</div>
